{# src/MenUSACH/Bundle/BaseBundle/Resources/views/Security/login.html.twig #}

{% extends 'MenUSACHBaseBundle:Default:index.html.twig' %}

{% block body %}
{% if error %}
    <div class="alert alert-error"> Usuario o Password inválidos</div>
{% endif %}
    <form class="form-horizontal" action="{{ path('login_check') }}" method="post">
        <legend>Acceder como Propietario</legend>
        <div class="control-group">
            <div class="control-label">
                <label for="username">Usuario:</label>
            </div>
            <div class="controls">
                <input type="text" id="username" name="_username"
                       value="{{ last_username }}" />
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <label for="password">Contraseña:</label>
            </div>
            <div class="controls">
                <input type="password" id="password" name="_password" />
            </div>
        </div>
        {#
           En el INPUT de tipo "hidden" se redirige a la ubicación que corresponde. 
        #}
        <div class="controls">
            <input type="hidden" name="_target_path" value="/prop" />
            <button class="btn btn-primary" type="submit">Ingresar</button>
        </div>
        
    </form>
{% endblock %}