{% extends 'MenUSACHBaseBundle:Admin:index.html.twig' %}

{% block body %}

<form class="form-horizontal" action="{{ path('tipopago_update', { 'id': entity.id }) }}"
      method="post" {{ form_enctype(edit_form) }}>
    <legend>Editar Tipo de Pago</legend>

    <div class="control-group">
        <div class="control-label">
            {{ form_label(edit_form.tp_descripcion) }}
        </div>
        <div class="controls">
            {{ form_widget(edit_form.tp_descripcion) }}
            <span class="help-block">
                {{ form_errors(edit_form.tp_descripcion) }}
            </span>
        </div>
    </div>

    <div class="controls">
        <input class="btn btn-primary" type="submit" value="Guardar Cambios"/>
    </div>

</form>

<div class="record_actions">
    <a href="{{ path('tipopago') }}">{{ '.icon-arrow-left Volver a Administraci√≥n de Tipos de Pago'|parse_icons }}</a>
</div> 

{% endblock %}
