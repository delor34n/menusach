{% extends 'MenUSACHBaseBundle:Admin:index.html.twig' %}

{% block body%}

<form class="form-horizontal" action="{{ path('admin_prop_create') }}" method="post" {{ form_enctype(form) }}>
    <legend>Crear nuevo Propietario</legend>
    <div class="control-group">
        <div class="control-label">
            {{ form_label(form.per_nombre) }}
        </div>
        <div class="controls">
            {{ form_widget(form.per_nombre) }}
            <span class="help-block">
                {{ form_errors(form.per_nombre) }}
            </span>
        </div>
    </div>
    <div class="control-group">
        <div class="control-label">
            {{ form_label(form.per_apellido_paterno) }}
        </div>
        <div class="controls">
            {{ form_widget(form.per_apellido_paterno) }}
            <span class="help-block">
                {{ form_errors(form.per_apellido_paterno) }}
            </span>
        </div>
    </div>
    <div class="control-group">
        <div class="control-label">
            {{ form_label(form.per_apellido_materno) }}
        </div>
        <div class="controls">
            {{ form_widget(form.per_apellido_materno) }}
            <span class="help-block">
                {{ form_errors(form.per_apellido_materno) }}
            </span>
        </div>
    </div>
    <div class="control-group">
        <div class="control-label">
            {{ form_label(form.username) }}
        </div>
        <div class="controls">
            {{ form_widget(form.username) }}
            <span class="help-block">
                {{ form_errors(form.username) }}
            </span>
        </div>
    </div>
    <div class="control-group">
        <div class="control-label">
            {{ form_label(form.password) }}
        </div>
        <div class="controls">
            {{ form_widget(form.password) }}
            <span class="help-block">
                {{ form_errors(form.password) }}
            </span>
        </div>
    </div>
    <div class="control-group">
        <div class="control-label">
            {{ form_label(form.per_email) }}
        </div>
        <div class="controls">
            {{ form_widget(form.per_email) }}
            <span class="help-block">
                {{ form_errors(form.per_email) }}
            </span>
        </div>
    </div>
    <div class="control-group">
        <div class="control-label">
            {{ form_label(form.pro_fono) }}
        </div>
        <div class="controls">
            {{ form_widget(form.pro_fono) }}
            <span class="help-block">
                {{ form_errors(form.pro_fono) }}
            </span>
        </div>
    </div>
    <div class="control-group">
        <div class="control-label">
            {{ form_label(form.propietario_roles) }}
        </div>
        <div class="controls">
            {{ form_widget(form.propietario_roles) }}
            <span class="help-block">
                {{ form_errors(form.per_apellido_paterno) }}
            </span>
        </div>
    </div>
    {{ form_widget(form) }}
    <div class="controls">
        <input class="btn btn-primary" type="submit" value="Crear"/>
    </div>
</form>

<div class="record_actions">
    <a href="{{ path('admin_prop') }}">{{ '.icon-arrow-left Volver a Administraci√≥n de Propietarios'|parse_icons }}</a>
</div> 

{% endblock %}
