{% extends 'MenUSACHBaseBundle:Admin:index.html.twig' %}

{% block body%}
{% block titulo %}
<h2>Administraci√≥n de Propietarios</h2>
{% endblock %}
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido Paterno</th>
            <th>Apellido Materno</th>
            <th>Username</th>
            <th>Email</th>
            <th>Fono  Contacto</th>
            <th>Actividad</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.pernombre }}</td>
            <td>{{ entity.perapellidopaterno }}</td>
            <td>{{ entity.perapellidomaterno }}</td>
            <td>{{ entity.username }}</td>
            <td>{{ entity.peremail }}</td>
            <td>{{ entity.profono }}</td>
            {% if entity.isActive == 1 %}
                <td>Activo</td>
            {% else %}
                <td>Inactivo</td>
            {% endif %}
            <td><a class="btn btn-link" href="{{
                path('admin_prop_edit', { 'id': entity.id }) }}">
                    {{ '.icon-edit Editar'|parse_icons }}</a></td>
            <td><a class="btn btn-link" href="{{
                path('admin_prop_delete', { 'id': entity.id }) }}">
                    {{ '.icon-remove Eliminar'|parse_icons }}</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_prop_new') }}">Crear un nuevo Propietario</a>
    </li>
</ul>
{% endblock %}