{% extends 'MenUSACHBaseBundle:Admin:index.html.twig' %}

{% block titulo %}
<h2>Administraci√≥n de Propietarios</h2>
{% endblock %}
{% block body%}
<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Apellido Paterno</th>
            <th>Apellido Materno</th>
            <th>Username</th>
            <th>Email</th>
            <th>Fono  Contacto</th>
            <th>Actividad</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_prop_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.pernombre }}</td>
            <td>{{ entity.perapellidopaterno }}</td>
            <td>{{ entity.perapellidomaterno }}</td>
            <td>{{ entity.username }}</td>
            <td>{{ entity.peremail }}</td>
            <td>{{ entity.profono }}</td>
            {% if entity.isActive == 1 %}
                <td>Activo</td>
            {% else %}
                <td>Inactivo</td>
            {% endif %}
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_prop_show', { 'id': entity.id }) }}">Ver</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_prop_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_prop_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
