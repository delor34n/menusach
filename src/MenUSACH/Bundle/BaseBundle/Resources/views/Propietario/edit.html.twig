    <div class="control-group">
        <div class="control-label">
            {{ form_label(edit_form.propietario_roles) }}
        </div>
        <div class="controls">
            {{ form_widget(edit_form.propietario_roles) }}
            <span class="help-block">
                {{ form_errors(edit_form.per_apellido_paterno) }}
            </span>
        </div>
    </div>
    {{ form_widget(edit_form) }}
    <div class="controls">
        <input class="btn btn-primary" type="submit" value="Guardar"/>
    </div>
