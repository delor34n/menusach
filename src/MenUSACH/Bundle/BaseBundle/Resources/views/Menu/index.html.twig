{% extends 'MenUSACHBaseBundle:Prop:index.html.twig' %}
{% block body %}
<table class="table">
    <caption><h1>Men√∫s ingresados</h1></caption>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Activo?</th>
            <th>Frecuencia</th>
            <th>Fecha</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.mennombre }}</td>
            <td>${{ entity.menprecio }}</td>
            <td>{% if entity.menactivo == 1 %} Si {% else %} No {% endif %}</td>
            <td>{% if entity.menfrecuencia == 1 %} Especifica {% else %} Permanente {% endif %}</td>
            <td>{% if entity.menfecha %}{{ entity.menfecha|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td><a class="btn btn-link" href="{{
                path('menu_edit', { 'id': entity.id }) }}">
                    {{ '.icon-edit Editar'|parse_icons }}</a></td>
            <td><a class="btn btn-link" href="{{
                path('menu_delete', { 'id': entity.id }) }}">
                    {{ '.icon-remove Eliminar'|parse_icons }}</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('menu_new') }}">
            Crear un nuevo menu
        </a>
    </li>
</ul>
{% endblock %}
