{% extends 'MenUSACHBaseBundle:Prop:index.html.twig' %}

{% block body %}
<form class="form-horizontal" action="{{ path('menu_update', { 'id': entity.id }) }}"
      method="post" {{ form_enctype(edit_form) }}>
    <legend>Editar Menú</legend>
    {% for element in edit_form %}
        {% if form_label(element) != form_label(edit_form._token) %}
        <div class="control-group">
            <div class="control-label">
                {{ form_label(element) }}
            </div>
            <div class="controls">
                {{ form_widget(element) }}
                <span class="help-block">{{ form_errors(element) }}</span>
            </div>
        </div>
        {% endif %}
    {% endfor %}
    <div class="controls">
        <input class="btn btn-primary" type="submit" value="Guardar cambios"/>
    </div>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('menu') }}">
            Volver a la lista de menús
        </a>
    </li>
</ul>
{% endblock %}
