{% extends 'MenUSACHBaseBundle:Default:index.html.twig' %}

{% block body %}

<form class="form-search" action="" id="filterForm" method="post">
	<select name="filter">
		<option selected value="0"> Seleccione el Ingrediente </option>
		{% for entity in entities_ing %}
                    <option value="{{entity.id }}"> {{ entity.ing_nombre }} </option>    
		{% endfor %}
	</select>
	<input class="btn" type="submit" name="submit" id="submit" value="Buscar"/>
</form>

<table class="table">
    <caption><h2>Menús del día {{ "now"|date("d/m/Y") }}</h2></caption>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Local</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        {% if entity.men_activo == TRUE %}
        <tr>
            <td><a href="{{ path('CommentMenUSACH', {'id': entity.menuid}) }}">{{ entity.men_nombre }}</a></td>
            <td>${{ entity.men_precio }}</td>
            <td><a href="{{ path('local_show', {'id': entity.localid}) }}"> {{ entity.loc_nombre }}</a></td>
        </tr>
        {% endif %}
    {% endfor %}
    </tbody>
</table>
{% endblock %}
