{% extends 'MenUSACHBaseBundle:Admin:index.html.twig' %}

{% block body%}

<form class="form-horizontal" action="{{ path('ingrediente_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <legend>Editar Ingrediente</legend>
    <div class="control-group">
        <div class="control-label">
            {{ form_label(edit_form.ing_nombre) }}
        </div>
        <div class="controls">
            {{ form_widget(edit_form.ing_nombre) }}
            <span class="help-block">
                {{ form_errors(edit_form.ing_nombre) }}
            </span>
        </div>
    </div>
    <div class="control-group">
        <div class="control-label">
                {{ form_label(edit_form.categorias) }}
        </div>
        <div class="controls">
            {{ form_widget(edit_form.categorias) }}
            <span class="help-block">
                {{ form_errors(edit_form.categorias) }}
            </span>
        </div>
    </div>
    <div class="controls">
        <input class="btn btn-primary" type="submit" value="Guardar Cambios"/>
    </div>
</form>

<div class="record_actions">
    <a href="{{ path('ingrediente') }}">{{ '.icon-arrow-left Volver a Administraci√≥n de Ingrediente'|parse_icons }}</a>
</div>

{% endblock %}
