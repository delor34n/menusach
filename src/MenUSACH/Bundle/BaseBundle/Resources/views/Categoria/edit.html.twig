{% extends 'MenUSACHBaseBundle:Admin:index.html.twig' %}

{% block body%}

<form class="form-horizontal" action="{{ path('categoria_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <legend>Editar Categoría</legend>
    <div class="control-group">
        <div class="control-label">
            {{ form_label(edit_form.cat_des) }}
        </div>
        <div class="controls">
            {{ form_widget(edit_form.cat_des) }}
            <span class="help-block">
                {{ form_errors(edit_form.cat_des) }}
            </span>
        </div>
    </div>
        
    <div class="controls">
        <input class="btn btn-primary" type="submit" value="Guardar Cambios"/>
    </div>
</form>

<div class="record_actions">
    <a href="{{ path('categoria') }}">{{ '.icon-arrow-left Volver a Administración de Categorías'|parse_icons }}</a>
</div> 

{% endblock %}
