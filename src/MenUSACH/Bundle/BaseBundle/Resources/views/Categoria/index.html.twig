{% extends 'MenUSACHBaseBundle:Admin:index.html.twig' %}

{% block body%}
{% block titulo %}
<h2>Categorias Ingresadas</h2>
{% endblock %}

<table class="table">
    <thead>
        <tr>
            <th>Descripción</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.catdes }}</td>
            <td><a class="btn btn-link" href="{{
                path('categoria_edit', { 'id': entity.id }) }}">
                    {{ '.icon-edit Editar'|parse_icons }}</a></td>
            <td><a class="btn btn-link" href="{{
                path('categoria_delete', { 'id': entity.id }) }}">
                    {{ '.icon-remove Eliminar'|parse_icons }}</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('categoria_new') }}">
            Crear Nueva Categoría
        </a>
    </li>
</ul>
{% endblock %}                