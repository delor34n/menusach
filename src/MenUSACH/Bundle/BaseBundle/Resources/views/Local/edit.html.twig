{% extends 'MenUSACHBaseBundle:Admin:index.html.twig' %}

{% block body %}

<form class="form-horizontal" action="{{ path('local_update', { 'id': entity.id }) }}"
      method="post" {{ form_enctype(edit_form) }}>

    <legend>Editar Local</legend>

    <div class="control-group">
        <div class="control-label">
            {{ form_label(edit_form.loc_nombre) }}
        </div>
        <div class="controls">
            {{ form_widget(edit_form.loc_nombre) }}
            <span class="help-block">
                {{ form_errors(edit_form.loc_nombre) }}
            </span>
        </div>
    </div>

    <div class="control-group">
        <div class="control-label">
            {{ form_label(edit_form.loc_ubicacion) }}
        </div>
        <div class="controls">
            {{ form_widget(edit_form.loc_ubicacion) }}
            <span class="help-block">
                {{ form_errors(edit_form.loc_ubicacion) }}
            </span>
        </div>
    </div>

    <div class="control-group">
        <div class="control-label">
            {{ form_label(edit_form.propietario) }}
        </div>
        <div class="controls">
            {{ form_widget(edit_form.propietario) }}
            <span class="help-block">
                {{ form_errors(edit_form.propietario) }}
            </span>
        </div>
    </div>

    <div class="control-group">
        <div class="control-label">
            {{ form_label(edit_form.tiposdepago) }}
        </div>
        <div class="controls">
            {{ form_widget(edit_form.tiposdepago) }}
            <span class="help-block">
                {{ form_errors(edit_form.tiposdepago) }}
            </span>
        </div>
    </div>
    
    <div class="controls">
        <input class="btn btn-primary" type="submit" value="Guardar Cambios"/>
    </div>
</form>

<div class="record_actions">
    <a href="{{ path('local') }}">{{ '.icon-arrow-left Volver a Administraci√≥n de Locales'|parse_icons }}</a>
</div> 

{% endblock %}
