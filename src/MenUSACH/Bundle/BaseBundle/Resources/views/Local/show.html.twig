{% extends '::base.html.twig' %}

{% block body %}
{% block titulo %}
<h3>Perfil de local {{ entity.locnombre }}</h3>
{% endblock %}
{% set urlimage = 'bundles/menusachbase/img/'~ entity.id ~'.jpg' %}
<img title="Image" width="230px" src="{{ asset( urlimage) }} "> </img> 
<table class="table">
    <tbody>
        <tr>
            <th>Encargado</th>  
            <td>{% for elemento in propietario%}{{ elemento.pernombre }} {{ elemento.perapellidopaterno }} {{ elemento.perapellidomaterno }}{% endfor %}</td>
        </tr>
        <tr>
            <th>Ubicación</th>  
            <td><a href="{{ path('RenderMap', {'id': entity.locubicacion}) }}">{{ '.icon-screenshot  [Ver Mapa]'|parse_icons }}</a></td>
        </tr>
        <tr>
            <th>Ranking</th>
            <td>{{ entity.locranking }}</td>
        </tr>
        <tr><th>
            </th>
            <td>
            </td>
        </tr>
          
    </tbody>
</table>
<div class="record_actions">
    <a href="{{ path('IndexMenUSACH') }}">{{ '.icon-arrow-left Volver al Menú Principal'|parse_icons }}</a>
</div>
{% endblock %}